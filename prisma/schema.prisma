generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- Enum ---
enum RoleEnum {
  super_admin
  admin
  pic
  user
}

enum RequestStatus {
  Success
  Reject
  Revise
  Canceled
  Approved
  Waiting_Manager_Approval
  Waiting_PIC_Approval
}

enum ItemType {
  It_Assets
  Non_It_Assets
}

enum ApproverRole {
  Manager
  PIC
}

// --- Core User Table ---
model User {
  user_id       String @id @default(nanoid(7))
  password      String // hashed password generated by backend
  first_name    String
  last_name     String
  email_address String @unique(map: "User_email_address_key")

  // one-to-one
  authenLog AuthenLog?
  Employee  Employee? // receive by user input
  Personal  Personal? // receive by user input

  userMetaData MetaData[]

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  UserRole UserRole[] // many-to-many relationship with Role

  createdMetaData  MetaData[]        @relation("MetaDataCreatedBy") // เปลี่ยนชื่อ field
  modifiedMetaData MetaData[]        @relation("MetaDataModifiedBy") // เปลี่ยนชื่อ field
  Request          Request[]
  RequestApproval  RequestApproval[]
}

// --- Authentication Log ---
model AuthenLog {
  authenLog_id            String   @id @default(nanoid(7))
  user                    User     @relation(fields: [user_id], references: [user_id])
  user_id                 String   @unique
  lastLogin_date          DateTime
  lastPassword_changeDate DateTime @default(now())
}

// --- User Metadata ---
model MetaData {
  meta_id                  String   @id @default(nanoid(7))
  user                     User     @relation(fields: [user_id], references: [user_id], onDelete: Cascade) // เชื่อมโยงไปยัง User
  user_id                  String
  start_date               DateTime
  end_date                 DateTime
  status                   String   @default("active")
  created_by               User?    @relation("MetaDataCreatedBy", fields: [created_by_user_id], references: [user_id]) // เชื่อมโยงไปยัง User
  created_by_user_id       String? // foreign key field
  created_date             DateTime @default(now())
  last_modified_by         User?    @relation("MetaDataModifiedBy", fields: [last_modified_by_user_id], references: [user_id]) // เชื่อมโยงไปยัง User
  last_modified_by_user_id String? // foreign key field
  last_modified_date       DateTime @updatedAt
}

// --- Employee Details ---
model Employee {
  employee_id String @id @default(nanoid(7))
  user        User   @relation(fields: [user_id], references: [user_id], onDelete: Cascade)
  user_id     String @unique

  department    Department @relation(fields: [department_id], references: [department_id])
  department_id String

  job_title    JobTitle @relation(fields: [job_title_id], references: [job_title_id])
  job_title_id String

  grade String
}

// --- Personal Details ---
model Personal {
  personal_id   String   @id @default(nanoid(7))
  user          User     @relation(fields: [user_id], references: [user_id], onDelete: Cascade)
  user_id       String   @unique
  id_card       String   @unique
  phone_number  String   @unique
  date_of_birth DateTime
  gender        String?
}

// --- Department ---
model Department {
  department_id   String     @id @default(nanoid(7))
  employees       Employee[] // one-to-many
  department_name String     @unique
}

// --- Job Title ---
model JobTitle {
  job_title_id   String     @id @default(nanoid(7))
  employees      Employee[]
  job_title_name String     @unique
}

// --- Role ---
model Role {
  role_id   String     @id @default(nanoid(7))
  role_name RoleEnum   @unique @default(user)
  UserRole  UserRole[]
}

// -*- Joint Table -*-
model UserRole {
  id      Int    @id @default(autoincrement())
  user    User   @relation(fields: [user_id], references: [user_id], onDelete: Cascade)
  user_id String
  role    Role   @relation(fields: [role_id], references: [role_id])
  role_id String

  @@unique([user_id, role_id]) // user มีหลาย role ได้
}

// Item and Request model
model Category {
  category_id   String @id @default(nanoid(7))
  category_name String @unique

  items Item[]
}

model Item {
  item_id       String   @id @default(nanoid(7))
  item_name     String
  description   String?
  category_id   String
  serial_number String?
  imei          String?
  item_type     ItemType
  is_available  Boolean  @default(true)

  category     Category      @relation(fields: [category_id], references: [category_id])
  requestItems RequestItem[]
}

model Request {
  request_id        String        @id @default(nanoid(7))
  request_date      DateTime      @default(now())
  user_id           String
  user_manager_id   String
  start_date        DateTime
  end_date          DateTime
  status            RequestStatus @default(Waiting_Manager_Approval)
  comment           String?
  parent_request_id String?

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  user          User      @relation(fields: [user_id], references: [user_id])
  parentRequest Request?  @relation("RequestToRequest", fields: [parent_request_id], references: [request_id])
  childRequests Request[] @relation("RequestToRequest")

  requestItems RequestItem[]
  approvals    RequestApproval[]
}

model RequestItem {
  id         String @id @default(nanoid(7))
  request_id String
  item_id    String
  quantity   Int

  request Request @relation(fields: [request_id], references: [request_id], onDelete: Cascade)
  item    Item    @relation(fields: [item_id], references: [item_id])
}

model RequestApproval {
  approval_id String        @id @default(nanoid(7))
  request_id  String
  approver_id String
  role        ApproverRole
  status      RequestStatus
  approved_at DateTime?
  comment     String?
  created_at  DateTime      @default(now())

  request     Request       @relation(fields: [request_id], references: [request_id], onDelete: Cascade)
  approver    User          @relation(fields: [approver_id], references: [user_id])
}
